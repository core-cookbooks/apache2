<% node['apache2']['listen_ports'].map(&:to_i).uniq.each do |port| -%>
<% node['apache2']['listen_addresses'].uniq.each do |address| -%>
Listen <%= address.length > 0 ? "#{address}:" : '' %><%= port %>
<% end -%>
<% if node['apache2']['version'] != "2.4" -%>
NameVirtualHost *:<%= port %>
<% end -%>
<% end -%>
